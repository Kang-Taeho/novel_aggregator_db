                  "  pm.expect(json).to.have.property(\"failed\");",
                  "  pm.expect(json).to.have.property(\"skipped\");",
                  "  pm.expect(json).to.have.property(\"duration_ms\");",
                  "  pm.expect(json).to.have.property(\"errors_sample\");",
                  "});",
